#!/bin/bash

# Проверка, что был передан аргумент (имя файла)
if [ -z "$1" ]; then
    echo "Использование: copy <имя файла>"
    exit 1
fi

# Проверка существования файла
FILE="$1"
if [ ! -f "$FILE" ]; then
    echo "Файл $FILE не найден!"
    exit 2
fi

# Копирование содержимого файла в буфер обмена с помощью xclip
cat "$FILE" | xclip -selection clipboard

echo "Содержимое файла '$FILE' скопировано в буфер обмена."

